#period_selector {
    border: 1px solid #e6e6e6;
    background: #fff;
    box-shadow: 0px 0px 4px white;
    float: right;
    padding: 3px 4px 3px 4px;
    margin-left: 10px;
}

#period_selector h6 {
    float: left; 
    margin: 6px 3px 0px 3px;
    display: inline-block;
}
  
.period_selection_link {
    float: left;
}

.period_selection_link input {
    margin-left: 4px !important;
}


.period_selection_link input, .selection_link {
    background: #f4f4f4 !important;
    border: 1px solid #dddddd !important;
    border-radius: 0 !important;
    -moz-border-radius: 0 !important;
    -webkit-border-radius: 0 !important;
    display: inline-block;
    padding: 4px 6px 4px 6px !important;
    -webkit-transition: all 0.3s ease;
    -webkit-transition-property: background, border, color;
    -moz-transition: all 0.3s ease;
    -moz-transition-property: background, border, color;
    transition: all 0.3s ease;
    transition-property: background, border, color;
    font-weight: bold !important;
    line-height: 13px !important;
    text-align: center !important;
    min-width: 30px !important;
    color: #888888 !important;
    font-size: 11px !important;
    text-decoration: none !important;
    margin-right: 4px;
}

.period_selection_link input:hover, .selection_link:hover {
    background: #eee !important;
    border: 1px solid #aaa !important;
    cursor: pointer !important;
}

.active_period_selection_link input, .active_period_selection_link input:hover,
.active_selection_link, .active_selection_link:hover {
    background: #00b3e9 !important;
    background: -moz-linear-gradient(top, #00b3e9 0%, #009fcc 100%) !important;
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #00b3e9), color-stop(100%, #009fcc)) !important;
    background: -webkit-linear-gradient(top, #00b3e9 0%, #009fcc 100%) !important;
    background: -o-linear-gradient(top, #00b3e9 0%, #009fcc 100%) !important;
    background: -ms-linear-gradient(top, #00b3e9 0%, #009fcc 100%) !important;
    background: linear-gradient(top, #00b3e9 0%, #009fcc 100%) !important;
    color: #fff !important;
    border-color: #01a8da !important;
    box-shadow: inset 0px 1px 0px #4ac9ef !important;
    text-shadow: 0px 1px 0px #027699 !important;
}

.lead_source_submit, .lead_source_submit:hover {
    background: #b776c7 !important;
    background: -moz-linear-gradient(top, #b776c7 0%, #a268b1 100%) !important;
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #b776c7), color-stop(100%, #a268b1)) !important;
    background: -webkit-linear-gradient(top, #b776c7 0%, #a268b1 100%) !important;
    background: -o-linear-gradient(top, #b776c7 0%, #a268b1 100%) !important;
    background: -ms-linear-gradient(top, #b776c7 0%, #a268b1 100%) !important;
    background: linear-gradient(top, #b776c7 0%, #a268b1 100%) !important;
    border: 1px solid #a469b3 !important;
    color: #fff !important;
    display: inline-block !important;
    padding: 4px 6px 4px 6px !important;
    text-shadow: 0px 1px 0px #722785 !important;
    transition: background-color 0.1s ease !important;
    font-weight: bold !important;
    line-height: 13px !important;
    text-align: center !important;
    min-width: 30px !important;
    font-size: 11px !important;
    text-decoration: none !important;
    opacity: 0.35;
    margin-left: 6px;
}

.active_lead_source_submit, .active_lead_source_submit:hover {
    opacity: 1;
    box-shadow: inset 0px 1px 0px #D792E9 !important;
}

.active_lead_source_submit:hover {
    cursor: pointer !important;
}


